<div class="mt-4">
  <h3>Sửa khóa học</h3>
  <form class="mt-4" method="post" action="/courses/{{course._id}}?_method=PUT">
    <div class="form-group">
      <label for="exampleInputPassword1">Name</label>
      <input
        type="text"
        class="form-control"
        value="{{course.name}}"
        name="name"
        id="name"
      />
    </div>
    <div class="form-group">
      <label for="exampleInputPassword1">Description</label>
      <input
        type="text" 
        class="form-control"
        value="{{course.description}}"
        name="description"
        id="description"
      />
    </div>
    <div class="form-group">
      <label for="exampleInputPassword1">Video ID</label>
      <input
        type="text"
        class="form-control"
        value="{{course.videoID}}"
        name="videoID"
        id="videoID"
      />
    </div>
    <div class="form-group">
      <label for="exampleInputPassword1">Level</label>
      <input
        type="text"
        class="form-control"
        value="{{course.level}}"
        name="level"
        id="level"
      />
    </div>
    <button type="submit" class="btn btn-primary mt-4">Save</button>
  </form>
</div>